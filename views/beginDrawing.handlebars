
<div class="container" style="padding-top:6em;">
    <div class="row">
    <div class="col-3"></div>
    <div class= "col-6" id="yuk">Picking winner now....</div>
    <div class="col-3"></div>
    </div>
</div>


<script>
const { styler, physics, easing, tween, composite } = popmotion;

const ball = document.querySelector('#yuk');
const ballStyler = styler(ball);

const polarToCartesian = ({ angle, radius }) => ({
  x: radius * Math.cos(angle),
  y: radius * Math.sin(angle)
});

composite({
  angle: physics({ velocity: 5 }),
  radius: tween({
    from: 50,
    to: 10,
    duration: 2000,
    ease: easing.easeInOut
  })
}).pipe(polarToCartesian)
  .start(ballStyler.set);

    setTimeout(function(){
        window.location.replace('/list');
    }, 5000)
</script>